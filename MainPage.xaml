<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">
    <StackLayout>
        <Entry  Placeholder="Введите текст" />
        <Button Text="Добавить" x:Name="aaa"/>
        <ListView x:Name="tasklist"  ItemsSource="{Binding task}" >
            <ListView.ItemTemplate >
                <DataTemplate x:Name="dataTemplate">
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Row="0" Grid.Column="0">
                                <Label Text="{Binding name}" x:Name="{Binding id}"/>
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1">
                                <Button Text="{Binding id}" HeightRequest="50" WidthRequest="100" Clicked="Delete"/>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
